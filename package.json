{
	"name": "@flunsi/query",
	"version": "0.0.3",
	"description": "A simple wrapper around pg.query() for simple use cases",
	"keywords": [
		"postgres",
		"pg",
		"query",
		"queries",
		"return types",
		"types",
		"row",
		"column",
		"field"
	],
	"author": "Niklaus Flunser",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Flunsi/query.git"
	},
	"bugs": {
		"url": "https://github.com/Flunsi/query/issues"
	},
	"type": "module",
	"files": [
		"dist/*"
	],
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"lint": "eslint src/**/*.ts*",
		"test": "vitest",
		"testonce": "vitest run",
		"build": "tsup",
		"zip": "npm pack --pack-destination=./package",
		"ci": "npm run lint && npm run testonce && npm run build && npm run zip",
		"release": "npm publish --access public"
	},
	"devDependencies": {
		"@types/pg": "^8.10.9",
		"@typescript-eslint/eslint-plugin": "6.13.1",
		"dotenv": "^16.3.1",
		"eslint": "8.54.0",
		"pg": "^8.11.3",
		"tsup": "^8.0.1",
		"typescript": "^5.3.2",
		"vitest": "^0.34.6"
	},
	"dependencies": {
		"@flunsi/utility": "^0.0.3"
	}
}
